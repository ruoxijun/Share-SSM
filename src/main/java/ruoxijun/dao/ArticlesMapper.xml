<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ruoxijun.dao.ArticlesMapper">
    <!--
        List<Article> queryArticles();
        List<Article> queryArticle(int id);
        int addArticle(Article article);
        int updateArticle(Article article);
        int deleteArticle(int id);  -->
    <!-- 常规方法 -->
    <select id="queryArticles" resultType="article">
        select * from articles order by article_id desc
    </select>
    <select id="queryArticle" resultType="article" parameterType="int">
        select * from articles where article_id = #{id}
    </select>
    <insert id="addArticle" parameterType="article">
        insert into articles(user_id,sort_id,article_title,
                             article_context,article_views,
                             article_date,article_like_count)
                values(#{userId},#{sortId},#{articleTitle},
                       #{articleContext},#{articleViews},
                       #{articleDate},#{articleLikeCount})
    </insert>
    <update id="updateArticle" parameterType="article">
        update articles set user_id = #{userId},sort_id = #{sortId},
                            article_title = #{articleTitle},
                            article_views = #{articleViews},
                            article_date = #{articleDate},
                            article_like_count = #{articleLikeCount}
                        where article_id = #{articleId}
    </update>
    <delete id="deleteArticle" parameterType="int">
        delete from articles where article_id = #{id}
    </delete>
</mapper>